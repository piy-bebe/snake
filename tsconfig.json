{
  "compilerOptions": {
    // File Layout - ЭТО ГЛАВНОЕ
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "esnext",          // оставляем esnext или es6
    "moduleResolution": "node",  // <--- ОБЯЗАТЕЛЬНО ДОБАВИТЬ
    "target": "esnext",
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}